            var addInfo = {
                prj_kode: Ext.getCmp('prj_kode').getValue(),
                sit_kode: Ext.getCmp('sit_kode').getValue(),
                ref_number: refNumber,
                trano: ''
            };

            if (total == 0)
                return false;
            jurnal.removeAll();

            if (valKode == 'IDR')
                var coaKodeAR = '1-2010';
            else
                var coaKodeAR = '1-2021';

            var coas = [
                {
                    coa_kode: coaKodeAR, //Coa AR
                    side: 'debit',
                    value: total,
                    tipe: 'AR-DEBITNOTE',
                    urut: idRow
                }
            ];

            if (valKode != 'IDR')
            {
                coas[coas.length] = {
                    coa_kode: '1-2022', //Coa AR, Exchange
                    side: 'debit',
                    value: (total * rateidr) - total,
                    tipe: 'AR-DEBITNOTE',
                    urut: idRow
                };
            }

            coas[coas.length] = {
                coa_kode: coaKode, //Coa Debitnote
                side: 'credit',
                value: total,
                tipe: 'AR-DEBITNOTE',
                urut: idRow
