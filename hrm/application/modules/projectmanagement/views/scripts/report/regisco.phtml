<script type="text/javascript ">

    Ext.onReady(function(){

        Ext.QuickTips.init();

        var regisstore = new Ext.data.Store ({
            autoLoad:true,
            url:'/projectmanagement/report/getregisco',
            reader:new Ext.data.JsonReader ({
                root:'data',
                totalProperty:'total',
                fields:[{
                    name:'trano'
                },{
                    name:'cus_kode'
                },{
                    name:'cus_nama'
                },{
                    name:'pocustomer'
                },{
                    name:'total'
                },{
                    name:'totalusd'
                },{
                    name:'ket'
                },{
                    name:'confirmation'
                },{
                    name:'tgl'
                },{
                    name:'uid'
                },{
                    name:'assignto'
                },{
                    name:'message'
                },{
                    name:'stsproses'
                }]
            })
        })

        var regisgrid = new Ext.grid.GridPanel ({

            store:regisstore,
            frame:true,
            renderTo:'regiscoreport',
            viewConfig:{
                forceFit:true
            },
            height:300,
            columns:[{
                header:'Trano',
                dataIndex:'trano'
            },{
                header:'Date',
                dataIndex:'tgl'
            },{
                header:'Customer',
                dataIndex:'cus_nama'
            },{
                header:'PO Customer',
                dataIndex:'pocustomer'
            },{
                header:'Value IDR',
                dataIndex:'total',
                renderer: function(v){
                    return v ? Ext.util.Format.number(v, '0,0.00') : '';
                }
            },{
                header:'Value USD',
                dataIndex:'totalusd',
                renderer: function(v){
                    return v ? Ext.util.Format.number(v, '0,0.00') : '';
                }
            },{
                header:'Description',
                dataIndex:'ket'
            },{
                header:'Source',
                dataIndex:'confirmation'
            },{
                header:'Status Proses',
                dataIndex:'stsproses',
                renderer : function(v, params, data){
                var status;
                if (v == '1')
                {
                    status = '<img src="/images/icons/fam/accept.png" />';
                }
                else if (v == '' || v == undefined || v == '0')
                {
                    status = '<img src="/images/icons/fam/action_stop.gif" />';
                }
                return status;}
            },{
                header:'Assign To',
                dataIndex:'assignto'
            }]


        })


    })


</script>
 
<div id="regiscoreport"></div>