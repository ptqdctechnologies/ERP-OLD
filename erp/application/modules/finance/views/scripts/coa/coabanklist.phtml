<script type="text/javascript">

    Ext.onReady(function(){

        Ext.QuickTips.init();

        var coastore = new Ext.data.Store ({

            autoLoad:true,
            url:'/finance/coa/getcoabank',
            reader:new Ext.data.JsonReader ({
                root:'data',
                totalProperty:'total',
                fields:[{
                    name:'id'
                },{
                    name:'coa_kode'
                },{
                    name:'coa_nama'
                },{
                    name:'trano_type'
                },{
                    name:'bank_nama'
                },{
                    name:'bank_norek'
                }]
            })


        })

        var coabankgrid = new Ext.grid.GridPanel ({

            store:coastore,
            frame:'true',
            title:'COA - Bank List',
            renderTo:'coa_list',
            height:600,
            width:752,
            columns:[new Ext.grid.RowNumberer(),
            {
                header:'Trano Type',
                dataIndex:'trano_type',
                sortable:true,
                width:80
            },
            {
                header:'COA Code',
                dataIndex:'coa_kode',
                sortable:true,
                width:100,
                align:'center'
            },{
                header:'COA Name',
                dataIndex:'coa_nama',
                sortable:true,
                width:180
            },{
                header:'Bank Name',
                dataIndex:'bank_nama',
                sortable:true,
                width:180
            },{
                header:'Account No.',
                dataIndex:'bank_norek',
                sortable:true,
                width:180
            }],
            bbar:new Ext.PagingToolbar ({
                id: 'paging-coa',
                pageSize: 40,
                store: coastore,
                displayInfo: true,
                displayMsg: 'Displaying data {0} - {1} of {2}',
                emptyMsg: "No data to display"
            })



        })


    })


</script>

    <div id="coa_list"></div>